<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title> Danh sách tài khoản </title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<style>
  body {
    background-color: white;
    background-attachment: fixed;
  }

  .outset {border-style: outset;}

  h1 {   
    font-size: 33px;
    text-align: center;
    font-family: verdana;
    color:rgba(3, 0, 0, 0.616);
    text-shadow: 2px 2px 3px rgb(112, 116, 117);
    /* text-shadow: 1px 1px 4px rgb(11, 99, 121); */
  }

  h4 {
    font-size: 25px;
    font-family: Georgia;
    /* font-family: Courier New, monospace;     */
    font-weight: 300;
    text-align: center;
    margin-bottom: 1.5em;
    letter-spacing: 3px;
  }

  th {
    font-size: 15px;
    font-family: arial;    
    /* font-family: Courier New, monospace;     */
    font-weight: 300;
    text-align: center;
    margin-bottom: 1.5em;
  }

  table, th, td {
    border:1px solid #4682B4	;
    text-align: center;
  }

  table {
    border-collapse:collapse;
  }

  .btn {
    background-color:#4682B4;
    letter-spacing: 1.0px;  
  } 
</style>
<body>
  <div class="row">
    <div class="col">     
    </div>
  </div>
  <br> 
  <br> 
  <h1 class="outset">DANH SÁCH KHÁCH HÀNG</h1>   
  <br> 
  <br>
  <section class="resume-section" id="education">
    <div class="resume-section-content">
      <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
        <div class="flex-grow-1"> 
          <table class="table table-user-information center">          
              <thead style="background-color: #4682B4	">
                <tr class="center">
                  <th scope="col">ID</th>
                  <th scope="col">Email</th>
                  <th scope="col">Tên</th>
                  <th scope="col">Số điện thoại</th>
                  <th scope="col">Tình trạng</th>
                  <th scope="col">Trạng thái</th>
                  <th scope="col">Tài khoản</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(function(i){
                  %>
                  <tr>
                    <td><%=i.id%></td>
                    <td><%=i.email%></td>
                    <td><%=i.displayName%></td>
                    <td><%=i.phoneNumber%></td>
                    <td><%=i.account.tinhtrang ? 'Bình thường' : 'Khóa' %></td>
                    <td><%=i.account.kichhoat ? 'Đã kích hoạt' : 'Chưa kích hoạt' %></td>
                    <td>
                      <form method="POST">
                        <button type="submit" name="btn_account_id" value="<%=i.account.id%>" class="btn btn-success">Danh sách tài khỏan</button>
                      </form>
                    </td>                  
                  </tr>
                  <%
                })
                %>
              </tbody>
    </table>
  </div>
</div>
</div>
  </section>
    <hr class="m-0" />    
</body>

</html>