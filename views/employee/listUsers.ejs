<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Danh sách tài khoản </title>
    <link rel="icon" type="image/x-icon" href="e/assets/img/favicon.ico"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<style>
    body {
        background-color: white;
        background-attachment: fixed;
    }

    .outset {
        border-style: outset;
    }

    h1 {
        font-size: 35px;
        text-align: center;
        font-family: verdana;
        color: rgba(3, 0, 0, 0.616);
        text-shadow: 2px 2px 3px rgb(112, 116, 117);
        /* text-shadow: 1px 1px 4px rgb(11, 99, 121); */
    }

    h4 {
        font-size: 25px;
        font-family: Georgia;
        /* font-family: Courier New, monospace;     */
        font-weight: 300;
        text-align: center;
        margin-bottom: 1.5em;
        letter-spacing: 3px;
    }

    th {
        font-size: 17px;
        font-family: arial;
        /* font-family: Courier New, monospace;     */
        font-weight: 300;
        text-align: center;
        margin-bottom: 1.5em;
    }

    td {
        text-align: center;
    }
</style>

<body>
    <h1 class="outset">DANH SÁCH TÀI KHOẢN</h1>
    <p></p>
    <p></p>
    <p></p>
    <br>
    <table class="table table-responsive-sm table-striped Border" class="container">
        <thead style="background-color: #1D809F">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Email</th>
                <th scope="col">Tên</th>
                <th scope="col">Số điện thoại</th>
            </tr>
        </thead>
        <tbody>
            <% listUsers.forEach(function(i){
          %>
            <tr>
                <td><%=i.id%></td>
                <td><%=i.email%></td>
                <td><%=i.displayName%></td>
                <td><%=i.phoneNumber%></td>
            </tr>
            <%
        })
        %>
        </tbody>
    </table>
</body>

</html>