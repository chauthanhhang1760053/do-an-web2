<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title> Kích hoạt tài khoản </title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<style>
  body {
    background-color: #bfd7f3;
  }
   .header{
    background-color: #1D809F;
    min-height: 80px;
   
}
h1 {

font-size: 25px;
font-family: Georgia;

text-align: center;
margin-bottom: 1.5em;
letter-spacing: 2px;
text-shadow: 1px 1px 4px rgb(11, 99, 121);
}


</style>

<body>
  <div class="row">
    <div class="col">
      <nav class="header">       
      </nav>
    </div>
  </div>
  <%
    if(thongbao!=null)
    {
      if(thongbao=="1")
      {
        %>thanh cong<%
      }
      else
      {
        %>that bai<%
      }
    }
    
  %>
  <h1>DANH SÁCH TÀI KHOẢN NGƯỜI DÙNG ĐANG CHỜ ĐƯỢC KÍCH HOẠT</h1>   
    <table class="table table-responsive-sm table-striped" class="container">
      <thead style="background-color: #1D809F">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Email</th>
          <th scope="col">Tên</th>
          <th scope="col">Số điện thoại</th>
          <th scope="col">Trạng thái</th>
          <th scope="col">Chờ duyệt</th>
        </tr>
      </thead>
      <tbody>
        <% cht.forEach(function(i){
          %>
          <tr>
            <td><%=i.id%></td>
            <td><%=i.email%></td>
            <td><%=i.displayName%></td>
            <td><%=i.phoneNumber%></td>
            <td><%=i.account.kichhoat%></td>
            <td>
              <form method="POST">
              <button type="submit" name="btn_account_id" value="<%=i.account.id%>" class="btn btn-success">Kích hoạt</button>
            </form>
            </td>
          
          </tr>
          <%
        })
        %>
      </tbody>
    </table>
 

    
</body>
</html>
